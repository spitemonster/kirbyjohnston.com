---
	import Image from "astro/components/Image.astro"
---

<figure class="img--headshot">
	<Image src="/images/me.webp" alt="a quite handsome fella." width="212" height="212" loading="eager" />
</figure>

<style>
	.img--headshot {
		width: 100%;
		max-width: 15rem;
		height: auto;
		aspect-ratio: 1/1;
		position: relative;
		overflow: visible;
		border-radius: 50%;
		filter: drop-shadow(
			calc(var(--delta-x) * 0.5rem) calc(var(--delta-y) * 0.5rem) 0
				var(--color-accent)
		);
		transition: filter calc(var(--dist) * var(--transition-time)) ease;

		img {
			border-radius: 50%;
			position: relative;
			z-index: 2;
			width: 100%;
		}
	}

	@media (max-width: 60rem) {
		.img--headshot {
			filter: drop-shadow(calc(0.5rem) calc(0.5rem) 0 var(--color-accent));
		}
	}

</style>